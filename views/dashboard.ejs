<div class="container">
    <h3 class="mt-2">Kikai Video Call</h3>
    <div class="row mt-5">
        
        <div class="col-md-4 card p-0">
            <%- include('./layouts/message') %>
            <div class="card-header">
                <h4>Create New Room</h4>
            </div>
            <div class="col-md-12 card-body">
                <form action="/create-meeting" method="post">
                    <label for="room_name">Room Name</label>
                    <input type="text" name="room_name" id="room_name" 
                    value="<%= typeof room_name != 'undefined' ? room_name : ''%>"
                    class="form-control" autocomplete="off"
                    required >
                    <input type="hidden" name="user_id" id="user_id" value="<%= user._id %>">
                    <button type="submit" class="btn btn-lg btn-block btn-success mt-2">Instent Meeting</button>
                </form>
               <div class="col-md-12 mt-5 p-0">
                <label for="room_name">Room ID</label>
                <input type="text" name="room_name" id="room_id"
                placeholder="Enter Room Id"
                class="form-control" autocomplete="off"
                required >
                <button type="button" id="joinMeeting" class="btn btn-lg btn-block btn-warning mt-2">Join Meeting</button>
                </div> 
            </div>

        </div>
        <div class="col-md-8 card p-0">
            <div class="card-header">
                <h4>Meeting Rooms</h4>
            </div>
            
            <div class="col-md-12 card-body p-0">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Meeting Room Name</th>
                            <th>Room Id</th>
                            <th>Start Meeting</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% meetings.forEach( (el,index) => {%> 
                        <tr>
                            <td><%= el.room_name %></td>
                            <td><%= el.room_id %></td>
                            <td>
                                <a href="/start-meeting/<%= el.room_id %>" class="text-success">Start Meeting</a>
                                <a href="/delete-meeting/<%= el._id %>">
                                <span class="fa fa-trash text-danger ml-5" style="cursor: pointer;"></span>
                                </a>
                            </td>
                        </tr>
                        <% })%>
                    </tbody>
                </table>
            </div>

            
        </div>
    </div>
    </div>
